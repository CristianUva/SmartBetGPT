# .env.example - Esempio di file di configurazione delle variabili d'ambiente
# Copia questo file in .env e modifica i valori secondo le tue esigenze

# Ambiente (per rilevare se siamo su PythonAnywhere)
# PYTHONANYWHERE_SITE=true

# Impostazioni database
USE_MYSQL_LOCAL=false  # Imposta a "true" per usare MySQL anche in ambiente locale

# Credenziali MySQL per PythonAnywhere
MYSQL_USER=yourusername
MYSQL_PASSWORD=yourpassword
MYSQL_HOST=yourusername.mysql.pythonanywhere-services.com
MYSQL_DATABASE=yourusername$default

# Credenziali MySQL per ambiente locale
MYSQL_USER_LOCAL=root
MYSQL_PASSWORD_LOCAL=password
MYSQL_HOST_LOCAL=localhost
MYSQL_DATABASE_LOCAL=smartbetgpt

# Chiave segreta per la sicurezza
SECRET_KEY=chiave_segreta_molto_complessa_da_cambiare

# Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=tuo_indirizzo_email@gmail.com
MAIL_PASSWORD=password_app_google
MAIL_DEFAULT_SENDER=tuo_indirizzo_email@gmail.com

# Football API
FOOTBALL_API_KEY=il_tuo_api_key

# OpenRouter API per chatbot
OPENROUTER_API_KEY=il_tuo_api_key_openrouter
